$('body').css('cursor','auto');	
$('#aplicaciones').empty();
$('#aplicaciones6').empty();
$('#aplicaciones9').empty();
<%unless @cuotasPendientes.length==0 %>
	<% @cuotasPendientes.each do |s| %>
		<% unless @ap[s.id].nil? %>
			<% @pendiente = s.importe - @ap[s.id] %>
			<% @pendiente = @pendiente.to_s + ' / ' + s.importe.to_s %>

		<% else %>
			<% @pendiente = s.importe.to_s %>
		<%end%>
		$('#aplicaciones').append(new Option(' <%= @pendiente + ' -- ' + s.fecha.strftime("%d/%m") + ' -- ' + s.desc %>','<%= s.id %>'));
		$('#aplicaciones6').append(new Option(' <%= @pendiente + ' -- ' + s.fecha.strftime("%d/%m") + ' -- ' + s.desc %>','<%= s.id %>'));
	<% end %>		
<% end %>
