<h1>CUOTAS</h1>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">  <thead>
    <tr>
      <th>Fecha</th>
      <th>Cuota</th>
      <th>Importe</th>
      <th>Transaccion</th>
      <th>Descripcion</th>
    </tr>
  </thead>

  <tbody>
    <% @cuotas.each do |cuota| %>
						<tr onclick="window.location.href='<%= edit_cuota_path(cuota)%>'">
        <td><%= cuota.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= cuota.cuota %></td>
        <td><%= cuota.importe %></td>
        <td><%= cuota.transaccion.id rescue nil%></td>
        <td><%= cuota.desc rescue nil%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
</div>
