<h1>MONEDAS</h1>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th></th>
      <th></th>  
    </tr>
  </thead>

  <tbody>
    <% @monedas.each do |moneda| %>
      <tr>
        <td><%= moneda.codigo %></td>
        <td><%= moneda.nombre %></td>
         <td><%= link_to image_tag("editar.png", :height => 20, :border=>0), edit_moneda_path(moneda) %></td>
        <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), moneda, method: :delete, data: { confirm: 'Esta seguro que desea borrar el registro?' } %></td>
  </tr>
      </tr>
    <% end %>
  </tbody>
</table>
		</div>
		</div>
	</div>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
	<%= link_to 'Crear Moneda', new_moneda_path, :class => 'button', :style=> 'width:100%' %>
		</div> 
	</div>
</div>
