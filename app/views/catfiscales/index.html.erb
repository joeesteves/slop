<h1>CATFISCALES</h1>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Iva</th>
      <th></th>
      <th></th>  
    </tr>
  </thead>

  <tbody>
    <% @catfiscales.each do |catfiscal| %>
      <tr>
        <td><%= catfiscal.codigo %></td>
        <td><%= catfiscal.nombre %></td>
        <td><%= catfiscal.iva %></td>
         <td><%= link_to image_tag("editar.png", :height => 20, :border=>0), edit_catfiscal_path(catfiscal) %></td>
        <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), catfiscal, method: :delete, data: { confirm: 'Esta seguro que desea borrar el registro?' } %></td>
  </tr>
      </tr>
    <% end %>
  </tbody>
</table>
		</div>
		</div>
	</div>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
	<%= link_to 'Crear Catfiscal', new_catfiscal_path, :class => 'button', :style=> 'width:100%' %>
		</div> 
	</div>
</div>
