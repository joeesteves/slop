<div class="small-12 columns">
	<div class="panel">
				<div class="row">
			<h1 class="h1">BIENVENIDO A <%= @current_est.nombre rescue nil %></h1>
			<div class="small-8 columns">
				<div class="row">
					<div class="small-10 columns">
						<%=@clima.html_safe rescue nil%>
					</div>
					<div class="small-2 columns">
						<table class="notDT">
							<tr>
								<Th colspan="2">ÚLTIMAS LLUVIAS</th>
							</tr>
							<tr>
								<th>FECHA</td>
								<Td>MM</td>
							</tr>
							<% unless @lluvias.nil? %>
								<% @lluvias.each do |l| %>
									<tr>
										<td> <%= l.fecha.strftime('%d/%m') %> </td>

										<td> <%= l.registro %> </td>
									</tr>
								<%end%>
							<%end%>
							<tr>
								<th colspan="2"><%= link_to 'NUEVO REGISTO', new_evento_path() %> </th>
							</tr>
						</table>
					</div>
				</div>
				<div class="row">
					<div class="small-12 columns">
						<% unless @tareasPendientes.nil? %>
							<% @tareasPendientes.each_with_index do |t,i| %>
								<% if i==0 %>
									<div class="panel">
										<div class="row" style="text-align:center;font-weight:bold">
											TAREAS PENDIENTES
										</div>
										<div class="row" style="background-color:#FEAF2F;font-weight:bold">
											<div class="small-2 columns">FECHA ESTIMADA</div>
											<div class="small-4 columns">TAREA A REALIZAR</div>
											<div class="small-5 columns">RESUMEN</div>
											<div class="small-1 columns">Ir </div>
										</div>
										</div>
									<% end %>	
									<div class="row">
										<div class="small-2 columns"><%= t.fecha.strftime("%d/%m/%Y") %> </div>
										<div class="small-4 columns"> <%= t.titulo %> </div>
										<div class="small-5 columns">aca va un resumen de la tarea</div>			
										<div class="small-1 columns"> <%= link_to '→→→', edit_tarea_path(t) %> </div>
									</div>
								<% end %>
							<% end %>
						</div>
					</div>
				</div>

			<div class="small-4 columns">
				<div class="row">
				<table class="notDT">
					<thead>
						<tr>
							<th colspan="3">COTIZACION DEL MERCADO LINIERS DEL <% unless @cotLiniers.nil? %><%= @cotLiniers[0].fecha.strftime('%d/%m/%Y') %><% else %>----SIN COTIZACIÓN --- <%end%></th>
						</tr>
						<tr>
							<th>Categorias</th>
							<th>Precio Promedio</th>
						</tr>
					</thead>
					<tbody>
						<% @cotLiniers.each do |c| %>
							<tr>
								<td><%= c.moneda.nombre %></td>
								<td><%= c.cotizacion %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		</div>
	</div>
	</div>

