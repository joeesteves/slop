<h1>Lista de cuentas</h1>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
    <tr>
      <th>CODIGO</th>
      <th>NOMBRE</th>
      <th>TIPO</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas.each do |cuenta| %>
						<tr onclick="window.location.href='<%= edit_cuenta_path(cuenta)%>'">
        <td class="AccAligment"><%= cuenta.codigo %></td>
        <td class="AccAligment">
				<% @tab = cuenta.codigo.split('.').length %>    
        <%= ("&nbsp;" * @tab * 4).html_safe %>
        <%=  cuenta.nombre %></td>
        <td><%= cuenta.tipo %></td>
    <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), cuenta, method: :delete, data: { confirm: 'Esta seguro?' } %> 
  </tr>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
</div>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<center>
			<a href="<%= new_cuenta_path %>">
					<input type="button" value="NUEVA CUENTA" class="button" style="width:100%"/>
			</a>
			
			
			</center>
		</div> 
	</div>
</div>
	

<div class="row">
<div class="small-12 columns">
<div class="panel">
<div class="row collapse">
<%= form_tag importar_cuentas_path, multipart: true do %>
 <div class="small-3 columns"> <%= file_field_tag :file %></div>
 <div class="small-3 columns"> <%= submit_tag "Importar", :class => 'tiny.button' %></div>
<% end %>
</div>
		</div>
	</div>
</div>



