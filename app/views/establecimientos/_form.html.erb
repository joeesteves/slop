<div class="row">
	<div class="small-12 columns">
<%= form_for(@establecimiento) do |f| %>
  <% if @establecimiento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@establecimiento.errors.count, "error") %> prohibited this establecimiento from being saved:</h2>

      <ul>
      <% @establecimiento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row collapse">
 <div class="small-2 columns">
      <span class="prefix">CODIGO</span>
  </div>
	<div class="small-10 columns">
    <%= f.text_field :codigo %>
	</div>
</div>
<div class="row collapse">
 <div class="small-2 columns">
      <span class="prefix">NOMBRE</span>
  </div>
	<div class="small-10 columns">
    <%= f.text_field :nombre %>
	</div>
</div>

<div class="row collapse">
 <div class="small-2 columns">
      <span class="prefix">Clima (escribir html del widget)</span>
  </div>
	<div class="small-10 columns">
    <%= f.text_area :clima %>
	</div>
</div>


<div class="row">
	<div class="small-12 columns">
	  <%= select_tag "users" , options_from_collection_for_select(@usuarios, :id, :usuario,@sel), :multiple => true %>
	</div>
</div>
<div class="row">
	<div class="small-6 columns">
    <%= f.submit "GUARDAR", :class => "button", :style => "width:100%" %>
	</div>
	<div class="small-6 columns">
	<button class="button" onclick="window.location.href='<%= establecimientos_path %>';return false" style="width:100%">VOLVER</button>
	</div>

</div>

<% end %>

</div>
