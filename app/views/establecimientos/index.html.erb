<h1>ESTABLECIMIENTOS</h1>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
    <tr>
      <th>CODIGO</th>
      <th>NOMBRE</th>
			<th></th>

    </tr>
  </thead>

  <tbody>
    <% @establecimientos.each do |establecimiento| %>
						<tr onclick="window.location.href='<%= edit_establecimiento_path(establecimiento)%>'">
        <td><%= establecimiento.codigo %></td>
        <td><%= establecimiento.nombre %></td>
        <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), establecimiento, method: :delete, data: { confirm: 'Esta seguro que desea borrar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
</div>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<center>
			<a href="<%= new_establecimiento_path %>">
					<input type="button" value="CREAR NUEVO ESTABLECIMIENTO" class="button"/>
			</a>
			</center>
		</div> 
	</div>
</div>
