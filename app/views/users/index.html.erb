<h1>USERS</h1>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
  <tr>
    <th>NOMBRE</th>
    <th></th>
    <th></th>
  </tr>
</thead>

  <tbody>
<% @users.each do |user| %>
      <tr onclick="window.location.href='<%= edit_user_path(user)%>'">
    <td><%= user.usuario %></td>
    <td><%= link_to image_tag("editar.png", :height => 20, :border=>0), edit_user_path(user) %></td>
    <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), user, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
  </tr>
<% end %>
</table>
</div>
	</div>
</div>

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<center>
			<a href="<%= new_user_path %>">
					<input type="button" value="CREAR" class="button"/>
			</a>
			</center>
		</div> 
	</div>
</div>

