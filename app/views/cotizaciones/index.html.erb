<h1>COTIZACIONES</h1>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
			<table style="width:100%">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Cotizacion</th>
      <th>Moneda</th>
      <th></th>
      <th></th>  
    </tr>
  </thead>

  <tbody>
    <% @cotizaciones.each do |cotizacion| %>
      <tr>
        <td><%= cotizacion.fecha.strftime('%d/%m/%Y') %></td>
        <td><%= cotizacion.cotizacion %></td>
        <td><%= cotizacion.moneda.nombre %></td>
         <td><%= link_to image_tag("editar.png", :height => 20, :border=>0), edit_cotizacion_path(cotizacion) %></td>
        <td><%= link_to image_tag("borrar.png", :height => 20, :border=>0), cotizacion, method: :delete, data: { confirm: 'Esta seguro que desea borrar el registro?' } %></td>
  </tr>
      </tr>
    <% end %>
  </tbody>
</table>
		</div>
		</div>
	</div>
<div class="row">
	<div class="small-12 large-12 columns">
		<div class="panel">
	<%= link_to 'Crear Cotizacion', new_cotizacion_path, :class => 'button', :style=> 'width:100%' %>
		</div> 
	</div>
</div>
