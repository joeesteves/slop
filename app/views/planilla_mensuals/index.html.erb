<h1>PLANILLA DE HACIENDA</h1>
<div class="row">
	<div class="small-12 columns">
	
<%= form_tag(planilla_consulta_path, :method => "get") do %>
<div class="row collapse">
 <div class="small-2 columns">
      <span class="prefix">DESDE</span>
  </div>
	<div class="small-10 columns">
   <input type="date" id="desde" name="desde" value="<%= Date.today %>"/>
	</div>
</div>
<div class="row collapse">
 <div class="small-2 columns">
      <span class="prefix">HASTA</span>
  </div>
	<div class="small-10 columns">
   <input type="date" id="hasta" name="hasta" value="<%= Date.today %>"/>
	</div>
</div>

<div class="row collapse">
 <div class="small-4 columns">
    <span class="prefix" style="height:36px">VER ESTADOS</span>
 </div>
 <div class="small-1 columns" >
<span class="prefix" style="height:36px">		<input type="checkbox" name="verEstados" value="1" style="width: 30px; height: 30px;"/></span>
 </div> 
	<div class="small-7 columns">
		<input type="submit" value="ARMAR PLANILLA" class="button" style="width:100%;height:100%">
	</div>
</div>



<% end %>

</div>
</div>
