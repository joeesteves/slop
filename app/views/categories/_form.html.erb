<div class="small-12 columns">
	<div class="panel">


		<%= form_for(@category) do |f| %>
			<% if @category.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

					<ul>
						<% @category.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="row collapse">

				<div class="small-1 columns">	
					<span class="prefix">NOMBRE:</span>
				</div>
				<div class="small-5 columns">
					<%= f.text_field :nombre, :tabindex=>1 %>
				</div>
				<div class="small-1 columns">
					<span class="prefix">TIPO DE CATEGOR√çA</span>
				</div>
				<div class="small-5 columns">
					<%= f.collection_select :catTipo_id, @categoriasTipo, :id, :nombre, {:prompt => "SEL. TIPO CAT."}, {:id => "catTipo_id", :tabindex=>2}%>
				</div>
			</div>
			<div class="row collapse">
				<div class="small-1 columns">	
					<span class="prefix">TRAZABILIDAD</span>
				</div>
				<div class="small-5 columns">
					<%= f.check_box :trazabilidad, :tabindex=>3 %>
				</div>

				<div class="small-1 columns">	
					<span class="prefix">PESO ESTANDAR</span>
				</div>
				<div class="small-5 columns">

					<%= f.number_field :pesoEstandard, :tabindex=>4%>
				</div>
			</div>

			<div class="row collapse">
				<div class="small-12 columns">	
					<%= f.text_field :desc, :tabindex=>5%>
				</div>
			</div>

			<div class="actions">
				<%= f.submit "GUARDAR", :class=>"button", :style =>"width:100%", :tabindex=>6 %>
			</div>
		<% end %>
	</div>
</div>
